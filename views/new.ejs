<% include partials/header %>

<div class="container">
	<div class="row text-center">
		<h2>Add to inventory</h2>
		<hr>
		<div style="width: 30%; margin: 40px auto;">
			<form method="POST" action="/inventory">
			<div class="form-group">
				<input class="form-control" type="text" name="make" placeholder="Make">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="model" placeholder="Model">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="year" placeholder="Year">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="Image URL">	
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
			</form>	
		</div>
		
		<br>
		<br>
		<div class="btn btn-default">
			<a href="/inventory">Go back</a>
		</div>
	</div>
</div>

<% include partials/footer %>
